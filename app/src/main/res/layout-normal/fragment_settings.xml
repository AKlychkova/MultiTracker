<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.elements.SettingsFragment">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_fab"
        style="@style/Widget.Material3.FloatingActionButton.Tertiary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        android:contentDescription="@string/add"
        android:focusable="true"
        android:src="@drawable/baseline_add_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/recyclerView_settings" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/help_fab"
        style="@style/Widget.Material3.FloatingActionButton.Tertiary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:clickable="true"
        android:contentDescription="@string/help"
        android:focusable="true"
        android:src="@drawable/outline_question_mark_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/settings_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:constraint_referenced_ids="total_slider,total_textview,target_textview,speed_textview,time_textview,target_slider,speed_slider,time_slider,ready_button,fullName_textview"
        tools:visibility="visible" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_settings"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/md_theme_inverseOnSurface"
        android:elevation="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.35"
        tools:itemCount="20"
        tools:listitem="@layout/item_patient_name" />

    <TextView
        android:id="@+id/hint_settings_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:hint="@string/statistics_hint"
        android:textSize="16sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/recyclerView_settings"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/hint_no_users_settings_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:elevation="10dp"
        android:gravity="center"
        android:hint="@string/no_users"
        android:textSize="16sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/recyclerView_settings"
        app:layout_constraintEnd_toEndOf="@+id/recyclerView_settings"
        app:layout_constraintStart_toStartOf="@+id/recyclerView_settings"
        app:layout_constraintTop_toTopOf="@+id/recyclerView_settings" />

    <TextView
        android:id="@+id/total_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/total_number"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/target_textview"
        app:layout_constraintStart_toStartOf="@+id/fullName_textview"
        app:layout_constraintTop_toBottomOf="@+id/fullName_textview" />

    <TextView
        android:id="@+id/target_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/target_number"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/speed_textview"
        app:layout_constraintStart_toStartOf="@+id/total_textview"
        app:layout_constraintTop_toBottomOf="@+id/total_textview" />

    <TextView
        android:id="@+id/speed_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/speed"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/time_textview"
        app:layout_constraintStart_toStartOf="@+id/target_textview"
        app:layout_constraintTop_toBottomOf="@+id/target_textview" />

    <TextView
        android:id="@+id/time_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/movement_time"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/ready_button"
        app:layout_constraintStart_toStartOf="@+id/speed_textview"
        app:layout_constraintTop_toBottomOf="@+id/speed_textview" />

    <com.google.android.material.slider.Slider
        android:id="@+id/total_slider"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:stepSize="1"
        android:value="5"
        android:valueFrom="2"
        android:valueTo="10"
        app:trackColorActive = "@color/yellow"
        app:thumbColor = "@color/yellow"
        app:tickVisible = "false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/total_textview"
        app:layout_constraintTop_toBottomOf="@+id/total_textview" />

    <com.google.android.material.slider.Slider
        android:id="@+id/target_slider"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:stepSize="1"
        android:value="3"
        android:valueFrom="1"
        android:valueTo="5"
        app:trackColorActive = "@color/yellow"
        app:thumbColor = "@color/yellow"
        app:tickVisible = "false"
        app:layout_constraintEnd_toEndOf="@+id/total_slider"
        app:layout_constraintStart_toStartOf="@+id/target_textview"
        app:layout_constraintTop_toBottomOf="@+id/target_textview" />

    <com.google.android.material.slider.Slider
        android:id="@+id/speed_slider"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:stepSize="1"
        android:value="5"
        android:valueFrom="1"
        android:valueTo="10"
        app:trackColorActive = "@color/yellow"
        app:thumbColor = "@color/yellow"
        app:tickVisible = "false"
        app:layout_constraintEnd_toEndOf="@+id/target_slider"
        app:layout_constraintStart_toStartOf="@+id/speed_textview"
        app:layout_constraintTop_toBottomOf="@+id/speed_textview" />

    <com.google.android.material.slider.Slider
        android:id="@+id/time_slider"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:stepSize="5"
        android:value="30"
        android:valueFrom="5"
        android:valueTo="60"
        app:trackColorActive = "@color/yellow"
        app:thumbColor = "@color/yellow"
        app:tickVisible = "false"
        app:layout_constraintEnd_toEndOf="@+id/speed_slider"
        app:layout_constraintStart_toStartOf="@+id/time_textview"
        app:layout_constraintTop_toBottomOf="@+id/time_textview" />

    <Button
        android:id="@+id/ready_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/ready"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/recyclerView_settings" />

    <TextView
        android:id="@+id/fullName_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/recyclerView_settings"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Иванов Иван Иванович" />

</androidx.constraintlayout.widget.ConstraintLayout>